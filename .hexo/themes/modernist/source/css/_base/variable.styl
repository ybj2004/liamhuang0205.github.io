// Image
image-background = 'images/checker.png'

// Color
color-background = #6C7989
color-font = #555
color-link = #069
color-strong = #222

// Font
font-default = "Droid Serif", "Helvetica Neue", "Helvetica", "Arial", "STXihei", "Microsoft YaHei", "微软雅黑", "Source Han Sans CN", "WenQuanYi Micro Hei", sans-serif
font-serif = "Georgia", serif
font-mono = Monaco, Menlo, Consolas, Courier New, monospace
font-title = "Droid Serif", "Helvetica Neue", "Helvetica", "Arial", "STXihei", "Microsoft YaHei", "微软雅黑", "Source Han Sans CN", "WenQuanYi Micro Hei", sans-serif
font-sans = "Droid Serif", "Helvetica Neue", "Helvetica", "Arial", "STXihei", "Microsoft YaHei", "微软雅黑", "Source Han Sans CN", "WenQuanYi Micro Hei", sans-serif

font-icon = FontAwesome
font-icon-path = 'fonts/fontawesome-webfont'

@font-face {
  font-family 'FontAwesome'
  font-style normal
  font-weight normal
  src url(font-icon-path.eot?#iefix) format('embedded-opentype'), url(font-icon-path.woff) format('woff'), url(font-icon-path.ttf) format('truetype'), url(font-icon-path.svg#FontAwesomeRegular) format('svg')
}

// Width
page-width = 680px
