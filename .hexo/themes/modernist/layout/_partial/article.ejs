<article class="<%= item.layout %>">
  <header>
    <% if (item.layout != 'page'){ %>
      <div class="icon"></div>
      <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
    <% } %>
    <%- partial('post/title') %>
  </header>
  <% if (item.photos && item.photos.length > 0){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="entry">
    <% if (item.excerpt && index){ %>
      <%- item.excerpt %>
    <% } else { %>
      <%- item.content %>
    <% } %>
  </div>
  <footer<% if (index) { %> class="end-sep"<% } %>>
    <% if (index){ %>
      <% if (item.excerpt){ %>
        <div class="alignleft">
          <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
        </div>
      <% } %>
      <% if (item.comment && config.disqus_shortname){ %>
      <div class="alignright">
        <a href="<%- item.permalink %>#disqus_thread" class="comment-link">Comments</a>
      </div>
      <% } %>
    <% } else { %>
      <div class="bdsharebuttonbox bdshare-button-style0-16" data-bd-bind="1406015473860">
        <a href="#" class="bds_more" data-cmd="more"></a>
        <a href="#" class="bds_tsina" data-cmd="tsina" title="分享到新浪微博"></a>
        <a href="#" class="bds_tqq" data-cmd="tqq" title="分享到腾讯微博"></a>
        <a href="#" class="bds_renren" data-cmd="renren" title="分享到人人网"></a>
        <a href="#" class="bds_fbook" data-cmd="fbook" title="分享到Facebook"></a>
        <a href="#" class="bds_twi" data-cmd="twi" title="分享到Twitter"></a>
        <a href="#" class="bds_weixin" data-cmd="weixin" title="分享到微信"></a>
        <a href="#" class="bds_douban" data-cmd="douban" title="分享到豆瓣网"></a>
        <a href="#" class="bds_copy" data-cmd="copy" title="复制网址"></a>
      </div>
      <%- partial('post/category') %>
      <%- partial('post/tag') %>
    <% } %>
    <div class="clearfix"></div>
  </footer>
</article>
<%- partial('guess') %>
<%- partial('comment') %>
